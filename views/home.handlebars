<div class="jumbotron">
  <div class="container">
    <h1 class="text-center">Welcome to Quizmas!</h1>
  </div>
</div>

<div class="container">
  <div class="col-xs-12 col-sm-6">
    <h2>Join a game</h2>
    <form action="/game/join" method="POST">
      <div class="form-group">
        <label for="game">Game Name</label>
        <input
          type="text"
          class="form-control"
          id="join-game"
          placeholder="xmas2015"
          name="game"
        >
      </div>
      <button class="button">Join</button>
    </form>
  </div>

  <div class="col-xs-12 col-sm-6">
    <h2>Create a game</h2>
    <form action="/game/create" method="POST">
      <div class="form-group">
        <label for="game">Game Name</label>
        <input
          type="text"
          class="form-control"
          id="create-game"
          placeholder="xmas2015"
          name="game"
        >
      </div>
      <button class="button">Create</button>
    </form>
  </div>
</div>
